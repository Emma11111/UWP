<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="using:HereYou"
      x:Class="HereYou.LoginJWXT"
      mc:Ignorable="d">

  <Grid>
    <!--<Grid.Background>
      <ImageBrush ImageSource="../Assets/bg5.png"
                  Stretch="UniformToFill" />
    </Grid.Background>-->
    <Grid x:ConnectionId='1' Width="280"
          Visibility="Collapsed"
          Grid.Column="1"
          Margin="0 220 0 0"
          x:Name="login">

      <StackPanel>
        <TextBlock Text="登 录 教 务 系 统"
                   FontSize="30"
                   FontWeight="Bold"
                   FontFamily="微软雅黑"
                   TextAlignment="Center"
                   Foreground="#FF359AE4"
                   Margin="0 0 0 20"
                   Width="280" />

        <TextBox x:ConnectionId='3' x:Name="stuNum"
                 FontSize="20"
                 PlaceholderText="请输入学号" />
        <PasswordBox x:ConnectionId='4' x:Name="password"
                     FontSize="20"
                     PlaceholderText="请输入密码"
                     Margin="0,15" />
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
          </Grid.RowDefinitions>

          <TextBox x:ConnectionId='5' x:Name="j_code"
                   Grid.Column="0"
                   Grid.Row="0"
                   FontSize="18"
                                       
                   PlaceholderText="请输入验证码" />
          <Button x:ConnectionId='6' Grid.Column="1"
                  Margin="10 0 0 0"
                  Height="36"
                  Padding="0"
                  BorderThickness="0"
                                   
                  Grid.Row="0">
            <Button.Content>
              <Image x:ConnectionId='9' x:Name="j_codepic"></Image>
            </Button.Content>
          </Button>

          <CheckBox x:ConnectionId='7' x:Name="remember"
                    Content="记住我"
                    Grid.Column="0"
                    FontSize="18"
                    BorderThickness="0"
                    Margin="0 10 0 0"
                    Grid.Row="1" />
          <Button x:ConnectionId='8' Grid.Column="1"
                  x:Name="signin"
                  Grid.Row="1"
                  FontSize="18"
                  Foreground="White"
                  BorderThickness="0"
                  Background="#FF1BAA4A"
                  HorizontalAlignment="Right"
                  Margin="0 10 0 0"
                  Width="120"
                  Content="登  录"
                                    
                  Style="{StaticResource PageButtonStyle}">
          </Button>
        </Grid>
      </StackPanel>
    </Grid>
    <WebView x:ConnectionId='2' x:Name="webview" Source="http://uems.sysu.edu.cn/jwxt"></WebView>
  </Grid>

</Page>

